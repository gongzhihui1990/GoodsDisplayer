<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item"
    android:layout_width="1680dp"
    android:layout_height="1640dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="400"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/item_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="400"
            android:background="@drawable/shape_item"></FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/item_small_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20" />

            <FrameLayout
                android:id="@+id/item_small_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/item_small_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20" />

            <FrameLayout
                android:id="@+id/item_small_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="400"
        android:layout_width="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/item_small_1_l"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20" />

            <FrameLayout
                android:id="@+id/item_small_2_l"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/item_small_3_l"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20" />

            <FrameLayout
                android:id="@+id/item_small_4_l"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="190"
                android:background="@drawable/shape_item"></FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
        <FrameLayout
            android:id="@+id/item_big_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="400"
            android:background="@drawable/shape_item"></FrameLayout>

    </LinearLayout>
</LinearLayout>