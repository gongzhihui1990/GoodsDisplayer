<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/red_inverse_gtr"
    android:minWidth="400dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title_tip"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/get_red"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/get_red" />


    <TextView
        android:id="@+id/message_tip"
        android:minHeight="144dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:text="提示内容。。。"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textSize="18sp"
            android:id="@+id/message_btn_01"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:background="@null"
            android:text="确认"
            android:textColor="@drawable/text_gtr_red" />

        <Button
            android:textSize="18sp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:id="@+id/message_btn_02"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minWidth="120dp"
            android:text="取消"
            android:textColor="@drawable/text_gtr_red" />
    </LinearLayout>


</LinearLayout>